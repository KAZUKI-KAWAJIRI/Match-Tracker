{
  "formatOnSave": true,
  "editor": {
    "tabSize": 2,
    "insertSpaces": true,
    "formatOnSave": true,
    "formatOnPaste": true,
    "rulers": [100],
    "defaultFormatter": "biome"
  },
  "typescript": {
    "preferences": {
      "quoteStyle": "single",
      "importModuleSpecifier": "non-relative"
    }
  },
  "workspace": {
    "rules": {
      "enableRules": true,
      "rulesFile": "cursor.json"
    }
  },
  "terminal": {
    "integrated": {
      "shell": {
        "windows": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
      }
    }
  }
} 